{
  "manifest_version": 3,
  "name": "Save to SHINEN",
  "version": "1.0.4",
  "description": "Save any page to SHINEN with one click",
  "permissions": [
    "tabs",
    "scripting",
    "activeTab",
    "offscreen",
    "notifications"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://chatgpt.com/*",
        "https://chat.openai.com/*",
        "https://claude.ai/*"
      ],
      "run_at": "document_idle",
      "js": [
        "content/beep_on_complete.js",
        "content/notify_approval_modal.js"
      ]
    }
  ],
  "action": {
    "default_title": "Save to SHINEN",
    "default_icon": {
      "16": "icon16.png",
      "32": "icon32.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icon16.png",
    "32": "icon32.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}
